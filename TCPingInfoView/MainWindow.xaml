<reactiveUi:ReactiveWindow
	x:TypeArguments="viewModels:MainWindowViewModel"
	x:Class="TCPingInfoView.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:reactiveUi="http://reactiveui.net"
	xmlns:tb="http://www.hardcodet.net/taskbar"
	xmlns:lex="http://wpflocalizeextension.codeplex.com"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
	xmlns:viewModels="clr-namespace:TCPingInfoView.ViewModels"
	lex:LocalizeDictionary.DesignCulture="zh-CN"
	lex:ResxLocalizationProvider.DefaultAssembly="TCPingInfoView"
	lex:ResxLocalizationProvider.DefaultDictionary="Strings"
	mc:Ignorable="d"
	Title="TCPingInfoView"
	Height="700" Width="1200"
	WindowStartupLocation="CenterScreen"
	syncfusion:SkinStorage.VisualStyle="Metro" 
	syncfusion:SkinStorage.MetroFontFamily="{lex:Loc Key=MetroFontFamily}"
>
	<Grid>
		<tb:TaskbarIcon x:Name="NotifyIcon"
						Visibility="Visible"
						ToolTipText="TCPingInfoView"
						IconSource="Resources/TCPing.ico"
						MenuActivation="RightClick"
						>
			<tb:TaskbarIcon.ContextMenu>
				<ContextMenu sfSkinManager:SfSkinManager.VisualStyle="Metro" FontSize="14">
					<MenuItem x:Name="ShowMenuItem" Header="{lex:Loc}" />
					<MenuItem x:Name="ExitMenuItem" Header="{lex:Loc}" />
				</ContextMenu>
			</tb:TaskbarIcon.ContextMenu>
		</tb:TaskbarIcon>
		<DockPanel>
			<syncfusion:MenuAdv DockPanel.Dock="Top"
								IsScrollEnabled="True"
								ExpandMode="ExpandOnClick"
								Orientation="Horizontal"
								PopUpAnimationType="None"
								Background="Transparent"
								FontSize="14"
								>
				<syncfusion:MenuItemAdv x:Name="FileMenuItem" Header="{lex:Loc}" >
					<syncfusion:MenuItemAdv x:Name="LoadMenuItem" Header="{lex:Loc}" />
					<syncfusion:MenuItemAdv x:Name="SaveMenuItem" Header="{lex:Loc}" />
					<syncfusion:MenuItemSeparator />
					<syncfusion:MenuItemAdv Header="{lex:Loc Key=ExitMenuItem_Header}" />
				</syncfusion:MenuItemAdv>
			</syncfusion:MenuAdv>
			<syncfusion:SfDataGrid >
				
			</syncfusion:SfDataGrid>
		</DockPanel>
	</Grid>
</reactiveUi:ReactiveWindow>