<views:ReactiveChromelessWindow
	x:TypeArguments="viewModels:MainWindowViewModel"
	x:Class="TCPingInfoView.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:tb="http://www.hardcodet.net/taskbar"
	xmlns:lex="http://wpflocalizeextension.codeplex.com"
	xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
	xmlns:sfSkinManager="clr-namespace:Syncfusion.SfSkinManager;assembly=Syncfusion.SfSkinManager.WPF"
	xmlns:viewModels="clr-namespace:TCPingInfoView.ViewModels"
	xmlns:views="clr-namespace:TCPingInfoView.Views"
	xmlns:system="clr-namespace:System;assembly=System.Runtime"
	lex:LocalizeDictionary.DesignCulture="zh-CN"
	lex:ResxLocalizationProvider.DefaultAssembly="TCPingInfoView"
	lex:ResxLocalizationProvider.DefaultDictionary="Strings"
	mc:Ignorable="d"
	Title="TCPingInfoView"
	Height="700" Width="1200"
	WindowStartupLocation="CenterScreen"
	AllowsTransparency="True"
	Icon="Resources/TCPing.ico"
	TitleBarBackground="{DynamicResource MetroThemeBrush}"
	TitleBarForeground="White"
	TitleTextAlignment="Center"
	TitleFontSize="16"
	TitleBarHeight="40"
	IconAlignment="Left"
	CornerRadius="0,0,8,8"
	ResizeBorderThickness="1"
	syncfusion:SkinStorage.VisualStyle="Metro"
	syncfusion:SkinStorage.MetroBrush="{DynamicResource MetroThemeBrush}"
	syncfusion:SkinStorage.MetroForegroundBrush="{DynamicResource MetroThemeBrush}"
	syncfusion:SkinStorage.MetroFontFamily="{lex:Loc Key=MetroFontFamily}"
>
	<Window.Resources>
		<Thickness x:Key="ButtonBorderThickness">0</Thickness>
		<Thickness x:Key="ButtonPadding">5</Thickness>
		<Thickness x:Key="ButtonMargin">0,0,5,0</Thickness>
		<Brush x:Key="MetroThemeBrush">#2196f3</Brush>
	</Window.Resources>
	<Grid>
		<tb:TaskbarIcon x:Name="NotifyIcon"
						Visibility="Visible"
						ToolTipText="TCPingInfoView"
						IconSource="Resources/TCPing.ico"
						MenuActivation="RightClick"
						>
			<tb:TaskbarIcon.ContextMenu>
				<ContextMenu
					sfSkinManager:SfSkinManager.VisualStyle="Metro"
					FontSize="14">
					<MenuItem x:Name="ShowMenuItem" Header="{lex:Loc}" />
					<MenuItem x:Name="ExitMenuItem" Header="{lex:Loc}" />
				</ContextMenu>
			</tb:TaskbarIcon.ContextMenu>
		</tb:TaskbarIcon>
		<DockPanel>
			<syncfusion:MenuAdv DockPanel.Dock="Top"
								IsScrollEnabled="True"
								ExpandMode="ExpandOnClick"
								Orientation="Horizontal"
								PopUpAnimationType="None"
								Background="Transparent"
								FontSize="14"
								BorderThickness="0"
								Margin="3"
								>
				<syncfusion:MenuItemAdv x:Name="FileMenuItem" Header="{lex:Loc}" >
					<syncfusion:MenuItemAdv x:Name="LoadMenuItem" Header="{lex:Loc}" />
					<syncfusion:MenuItemAdv x:Name="SaveMenuItem" Header="{lex:Loc}" />
					<syncfusion:MenuItemSeparator />
					<syncfusion:MenuItemAdv Header="{lex:Loc Key=ExitMenuItem_Header}" />
				</syncfusion:MenuItemAdv>
			</syncfusion:MenuAdv>
			<WrapPanel DockPanel.Dock="Top" Margin="5,5,0,5">
				<Button Background="Transparent"
						BorderThickness="{StaticResource ButtonBorderThickness}"
						Padding="{StaticResource ButtonPadding}"
						Margin="{StaticResource ButtonMargin}">
					<Viewbox Width="48" Height="48">
						<Canvas Width="24" Height="24">
							<Path Fill="Black" Data="M8,7.71L18,12L8,16.29V12.95L15.14,12L8,11.05V7.71M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4Z" />
						</Canvas>
					</Viewbox>
				</Button>
				<Button Background="Transparent"
						BorderThickness="{StaticResource ButtonBorderThickness}"
						Padding="{StaticResource ButtonPadding}"
						Margin="{StaticResource ButtonMargin}">
					<Viewbox Width="48" Height="48">
						<Canvas Width="24" Height="24">
							<Path Fill="Black" Data="M20,14H4V10H20" />
						</Canvas>
					</Viewbox>
				</Button>
				<Button Background="Transparent"
						BorderThickness="{StaticResource ButtonBorderThickness}"
						Padding="{StaticResource ButtonPadding}"
						Margin="{StaticResource ButtonMargin}">
					<Viewbox Width="48" Height="48">
						<Canvas Width="24" Height="24">
							<Path Fill="Black" Data="M19,3H5C3.89,3 3,3.89 3,5V9H5V5H19V19H5V15H3V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M10.08,15.58L11.5,17L16.5,12L11.5,7L10.08,8.41L12.67,11H3V13H12.67L10.08,15.58Z" />
						</Canvas>
					</Viewbox>
				</Button>
			</WrapPanel>
			<syncfusion:SfDataGrid
				Margin="5"
				BorderThickness="0"
				Background="Transparent"
			>

			</syncfusion:SfDataGrid>
		</DockPanel>
	</Grid>
</views:ReactiveChromelessWindow>